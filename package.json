{
  "name": "unicode-hover-preview",
  "displayName": "Unicode Hover Preview",
  "description": "Display Unicode characters with custom fonts on hover",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=22.0.0",
    "npm": ">=10.0.0",
    "pnpm": ">=10.17.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/trustart-co-jp/unicode-hover-preview"
  },
  "categories": ["Other"],
  "activationEvents": ["onLanguage:*"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "unicodeHoverPreview.setFont",
        "title": "Set Unicode Preview Font"
      }
    ],
    "configuration": {
      "title": "Unicode Hover Preview",
      "properties": {
        "unicodeHoverPreview.fontFamily": {
          "type": "string",
          "default": "Arial Unicode MS",
          "description": "Font family for Unicode character preview"
        },
        "unicodeHoverPreview.fontSize": {
          "type": "number",
          "default": 24,
          "description": "Font size for Unicode character preview"
        },
        "unicodeHoverPreview.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Unicode hover preview"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "format": "biome check --write --linter-enabled=false .",
    "lint": "biome lint --write --diagnostic-level=error .",
    "lint:format": "biome check --write --diagnostic-level=error .",
    "lint:format:ci": "biome ci --verbose --diagnostic-level=error .",
    "lint:cspell": "cspell ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@tsconfig/node22": "22.0.2",
    "@tsconfig/recommended": "1.0.10",
    "@types/node": "24.1.0",
    "@types/vscode": "^1.74.0",
    "cspell": "9.2.1",
    "typescript": "5.9.3"
  }
}
